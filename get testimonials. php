<?php
$host = 'localhost';
$db   = 'your_database';
$user = 'your_username';
$pass = 'your_password';

$conn = new mysqli($host, $user, $pass, $db);
if ($conn->connect_error) {
  die("Connection failed: " . $conn->connect_error);
}

$result = $conn->query("SELECT text, author FROM testimonials ORDER BY id DESC");
$testimonials = [];

while ($row = $result->fetch_assoc()) {
  $testimonials[] = [
    'text' => '"' . $row['text'] . '"',
    'author' => '— ' . $row['author']
  ];
}

echo json_encode($testimonials);
$conn->close();
?>